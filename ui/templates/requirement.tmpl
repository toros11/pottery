								<div id="edit_requirment_list_panel">
									<table class="table table-condensed table-striped" id="edit_requirements_table" style="width:100%;">
										<thead>
											<tr>
												<th>&nbsp;</th>
												<th>Source</th>
												<th>Destination</th>
												<th>Access</th>
											</tr>
										</thead>
										<tbody class="table table-bordered" id="edit_requirements_table_body"></tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>


